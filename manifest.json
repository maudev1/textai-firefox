{
  "manifest_version": 2,
  "name": "TextAI",
  "version": "1.5",
  "description": "Enhance and refine your texts with artificial intelligence",
  "icons": {
    "48": "mind.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "mind.png"
  },
  "permissions": ["tabs", "storage", "activeTab", "scripting", "https://api.groq.com/*", "menus", "notifications"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
    "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "textai@textai.work.gd",
      "strict_min_version": "91.0"
    }
  }
}

